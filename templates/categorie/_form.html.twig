{# formulaire partagé pour la création et l'édition des catégories #}
{# attend une variable 'form' & optionnellement 'button_label' #}
{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': ''}}) }}
   
    {{ form_errors(form) }}

    <div class="mb-3">
        {{ form_row(form.nom, {
            'label': 'Nom de la catégorie',
            'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Ex: Incident Technique'}
        }) }}
    </div>

    <button class="btn btn-lg mt-3" style="background-color: var(--bleu-majorelle); border-color: var(--bleu-majorelle); color: white;">{{ button_label|default('Enregistrer') }}</button>
{{ form_end(form) }}
