{% extends 'base.html.twig' %}

{% block title %}Détail Statut : {{ statut.nom }}{% endblock %}

{% block body %}
<div class="content-card">
    <h1>Statut : {{ statut.nom }}</h1>

    <table class="table table-bordered mt-4">
        <tbody>
            <tr>
                <th scope="row" style="width: 150px;">Id</th>
                <td>{{ statut.id }}</td>
            </tr>
            <tr>
                <th scope="row">Nom</th>
                <td>{{ statut.nom }}</td>
            </tr>
        </tbody>
    </table>

    <div class="mt-4">
        <a href="{{ path('app_statut_index') }}" class="btn btn-secondary">Retour à la liste</a>
        <a href="{{ path('app_statut_edit', {'id': statut.id}) }}" class="btn btn-warning ms-2">Modifier</a>
        <div style="display: inline-block;" class="ms-2">
             {{ include('statut/_delete_form.html.twig', {'button_label': 'Supprimer ce statut', 'button_class': 'btn btn-danger'}) }}
        </div>
    </div>
</div>
{% endblock %}
